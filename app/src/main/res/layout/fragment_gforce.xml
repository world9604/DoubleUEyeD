<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gforce"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/ball_background_image_des"
        android:scaleType="fitXY"
        android:src="@drawable/bg" />

    <ImageView
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/ball_background_grid_image_des"
        android:adjustViewBounds="true"
        android:layout_marginTop="@dimen/gforce_grid_margin"
        android:layout_marginBottom="@dimen/gforce_grid_margin"
        android:layout_marginLeft="@dimen/gforce_grid_margin"
        android:layout_marginRight="@dimen/gforce_grid_margin"
        android:scaleType="fitXY"
        android:src="@drawable/grid" />

    <com.hongbog.view.BallSurFaceView
        android:id="@+id/BallSurFaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>
