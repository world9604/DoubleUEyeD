<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <Button
            android:id="@+id/btnGallery"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="GetEyeImage"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnVerification"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="verification"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textResult"
        android:layout_width="match_parent"
        android:layout_height="293dp"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textResultClass"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="305dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imgLowRight"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:contentDescription="no_image"
            android:scaleType="center" />

        <ImageView
            android:id="@+id/imgLowLeft"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:contentDescription="no_image"
            android:scaleType="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="305dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imgMidRight"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:contentDescription="/no_image"
            android:scaleType="center" />

        <ImageView
            android:id="@+id/imgMidLeft"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:contentDescription="no_image"
            android:scaleType="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="305dp"
        android:layout_height="74dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imgHighRight"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:contentDescription="no_image"
            android:scaleType="center" />

        <ImageView
            android:id="@+id/imgHighLeft"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:contentDescription="no_image"
            android:scaleType="center" />
    </LinearLayout>
</LinearLayout>